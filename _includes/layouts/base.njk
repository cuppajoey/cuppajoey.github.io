<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="icon" href="/favicon.png" type="image/png">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="{{ 'https://unpkg.com/aos@next/dist/aos.css' | url }}">
    <link rel="stylesheet" href="{{ '/assets/css/app.css' | url }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  </head>
  <body class="body dark-theme">
    <header class="header">
      <div class="wrapper">
        <div class="brand">
          <a href="{{ '/' | url }}">
            <img class="logo" src="/assets/img/cuppajoey-logo.svg" alt="Joseph Schultz" data-aos="fade-in">
          </a>
        </div>
        <nav class="main-nav">
          <ul>
            {%- for entry in collections.all | eleventyNavigation %}
              <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
                <a href="{{ entry.url | url }}" data-scroll data-aos="fade-in">{{ entry.title }}</a>
              </li>
            {%- endfor %}
          </ul>
        </nav>
        <div class="social">
          <a href="https://github.com/cuppajoey">{% icon 'LogoGithub20' %}</a>
          <a href="https://www.linkedin.com/in/cuppajoey">{% icon 'LogoLinkedin20' %}</a>
          <a href="https://instagram.com/cuppajoey">{% icon 'LogoInstagram20' %}</a>
        </div>
      </div>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer class="footer pad-top-5 pad-btm-4">
      <div class="wrapper flex direction-col align-center">
        <img src="/assets/img/cj-icon.svg" height="30" alt="Icon of a coffee cup wearing a hat">
        <span class="body-compact mar-top-1 mar-btm-05 text-center">Made with ðŸ’œ. Built on <a href="https://11ty.dev/" target="_blank">Eleventy</a>. <br/>Thank you for visiting!</span>
        <div class="social">
          <a href="https://github.com/cuppajoey">{% icon 'LogoGithub20' %}</a>
          <a href="https://www.linkedin.com/in/cuppajoey">{% icon 'LogoLinkedin20' %}</a>
          <a href="https://instagram.com/cuppajoey">{% icon 'LogoInstagram20' %}</a>
        </div>
      </div>
    </footer>
    <div id="space"></div>

    <script src="{{ 'https://unpkg.com/aos@next/dist/aos.js' | url }}"></script>
    <script>
      AOS.init({disable: "mobile"});
    </script>  
    <script src="{{ 'https://cdn.jsdelivr.net/gh/cferdinandi/smooth-scroll@15/dist/smooth-scroll.polyfills.min.js' | url }}"></script>
    <script type="text/javascript" src="{{ '/assets/js/particles.min.js' | url }}"></script>
    <script type="text/javascript" src="{{ '/assets/js/app.js' | url }}"></script>
  </body>
</html>
